{
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  // 📦 qc-ui-interface - Storybook 应用配置
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

  /**
   * 🎯 配置说明
   *
   * qc-ui-interface 是 Storybook 应用（不是库）
   * - 继承 Monorepo 基础配置
   * - 添加应用特定配置（noEmit、路径别名等）
   */

  // 继承基础配置
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // ⚛️ React 配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    "jsx": "react-jsx",

    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // 📦 应用特定配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    /**
     * noEmit: 不生成输出文件
     *
     * 应用（非库）的特点：
     * - Storybook/Vite 负责构建
     * - TypeScript 只用于类型检查
     * - 不需要生成 .js 或 .d.ts 文件
     */
    "noEmit": true,

    /**
     * allowImportingTsExtensions: 允许导入 .ts 扩展名
     *
     * 开发体验优化：
     * - 可以写 import './foo.ts'
     * - Vite 会处理这些导入
     */
    "allowImportingTsExtensions": true,

    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // 📁 路径别名配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    /**
     * baseUrl 和 paths: 配置路径别名
     *
     * 目的：
     * - 直接导入 monorepo 中其他包的源码
     * - 实现热更新（HMR）
     * - 开发体验更好
     *
     * 使用示例：
     * import { Button } from '@qincai/ui'
     * // 实际指向: ../../packages/qc-ui/src
     */
    "baseUrl": ".",
    "paths": {
      "@qincai/ui": ["../../packages/qc-ui/src"],
      "@qincai/ui/*": ["../../packages/qc-ui/src/*"]
    }
  },

  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  // 📂 包含的文件
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

  "include": [
    "stories/**/*",      // Storybook 故事文件
    ".storybook/**/*",   // Storybook 配置
    "src/**/*"           // 源代码
  ],

  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  // 🚫 排除的文件
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

  "exclude": [
    "node_modules",
    "storybook-static"   // Storybook 构建输出
  ]
}
