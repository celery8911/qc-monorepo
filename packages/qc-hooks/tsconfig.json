{
  "compilerOptions": {
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // 🎯 基础编译选项
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    // 目标 ECMAScript 版本
    "target": "ES2020",

    // 使用的库文件
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    // 模块系统
    "module": "ESNext",

    // 模块解析策略
    "moduleResolution": "bundler",

    // 允许导入 JSON 文件
    "resolveJsonModule": true,

    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // ⚛️ React / JSX 配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    // JSX 转换模式
    "jsx": "react-jsx",

    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // 📤 输出配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    // 生成声明文件
    "declaration": true,

    // 输出目录
    "outDir": "./dist",

    // 源代码根目录
    "rootDir": "./src",

    // 仅生成声明文件（.d.ts）
    "emitDeclarationOnly": true,

    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // 🔧 其他配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    // 跳过库文件的类型检查
    "skipLibCheck": true,

    // 严格模式
    "strict": true,

    // 允许从没有默认导出的模块中默认导入
    "esModuleInterop": true,

    // 强制文件名大小写一致
    "forceConsistentCasingInFileNames": true,

    // 确保每个文件可以独立转译
    "isolatedModules": true
  },

  // 包含的文件
  "include": [
    "src/**/*"
  ],

  // 排除的文件和目录
  "exclude": [
    "node_modules",
    "dist"
  ]
}
