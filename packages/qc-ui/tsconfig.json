{
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  // 📚 TypeScript 配置文件
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  // 定义 TypeScript 编译器的行为和规则

  "compilerOptions": {
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // 🎯 目标环境配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    // 编译后的 JavaScript 版本（ES2020 支持现代浏览器）
    "target": "ES2020",

    // 生成的模块系统（ESNext 表示最新的 ES 模块）
    "module": "ESNext",

    // 可用的内置库（ES2020 + DOM API）
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // 📦 模块解析配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    // 模块解析策略（bundler 适用于 Vite/Webpack 等打包工具）
    "moduleResolution": "bundler",

    // 允许导入 JSON 文件
    "resolveJsonModule": true,

    // 允许导入带 .ts 扩展名的文件（开发时）
    // 注意：构建时会被禁用以生成 .d.ts 文件
    // "allowImportingTsExtensions": true,

    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // ⚛️ React / JSX 配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    // JSX 转换模式（react-jsx 使用新的自动导入模式，无需手动导入 React）
    "jsx": "react-jsx",

    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // 🔒 类型检查严格度
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    // 开启所有严格类型检查选项
    "strict": true,

    // 检查未使用的局部变量
    "noUnusedLocals": true,

    // 检查未使用的参数
    "noUnusedParameters": true,

    // 检查 switch 语句中的 fallthrough（缺少 break）
    "noFallthroughCasesInSwitch": true,

    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // 📤 输出配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    // 生成类型声明文件（.d.ts）
    "declaration": true,

    // 输出目录
    "outDir": "./dist",

    // 源代码根目录
    "rootDir": "./src",

    // 仅生成声明文件（.d.ts），JS 由 Vite 负责构建
    "emitDeclarationOnly": true,

    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
    // 🔧 其他配置
    // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

    // 跳过库文件的类型检查（加快编译速度）
    "skipLibCheck": true,

    // 支持 CommonJS 和 ES Module 互操作
    "esModuleInterop": true,

    // 允许默认导入（import React from 'react'）
    "allowSyntheticDefaultImports": true,

    // 强制文件名大小写一致
    "forceConsistentCasingInFileNames": true
  },

  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  // 📂 包含和排除的文件
  // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

  // 包含的文件和目录
  "include": [
    "src/**/*"           // src 目录下的所有文件
  ],

  // 排除的文件和目录
  "exclude": [
    "node_modules",      // 依赖包
    "dist"               // 构建输出
  ]
}
